#!<%= ENV["SHELL"] || "/bin/bash" %>
tmux <%= socket %> start-server

if ! $(tmux <%= socket %> start-server\; has-session -t <%= name %>); then
  cd <%= root || "." %>
  <%= pre %>
  env TMUX= tmux <%= socket %> start-server\; new-session -d -s <%= name %> -n <%= tabs[0].name %>
  tmux <%= socket %> set-option -t <%= name %> default-path <%= root %>

  <% tabs[1..-1].each_with_index do |tab, ti| %>
    <% i = ti + base_index + 1 %>
    tmux <%= socket %> new-window -t <%= window(i) %> -n <%= tab.name %>
  <% end %>

  # set up tabs and panes
  <% tabs.each_with_index do |tab, ti| %>
    <% i = ti + base_index %>

    # tab "<%= tab.name %>"
    <% unless tab.panes? %>
      <%= send_keys(tab.command, i) %>
    <% else tab.panes %>
      <% tab.panes.each do |pane| %>
         tmux <%= socket %> splitw -t <%= window(i) %>
         <%= send_keys(pane.command, i) %>
         tmux <%= socket %> select-layout -t <%= window(i) %> <%= tab.layout %>
      <% end %>

      tmux <%= socket %> select-pane -t <%= window(i) %>.0
    <% end %>
  <% end %>

  tmux <%= socket %> select-window -t <%= window(base_index) %>
fi

if [ -z $TMUX ]; then
  tmux <%= cli_args %> <%= socket %> -u attach-session -t <%= name %>
else
  tmux <%= socket %> -u switch-client -t <%= name %>
fi
